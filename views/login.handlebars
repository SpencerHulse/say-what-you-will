{{> header headline="Say What You Will"}}

<div class="box account-form">
  <div class="box-heading account-heading"></div>
  <div class="account-form-wrapper">
    <label for="login-username">Username</label>
    <input type="text" name="login-username" id="login-username" />
    <label for="login-password">Password</label>
    <input type="text" name="login-password" id="login-password" />
    <button type="submit" class="account-btn" id="login-btn">Login!</button>
    <a href="/sign-up" class="account-link">Sign Up Instead</a>
  </div>
</div>

<script src="/javascript/login.js"></script>